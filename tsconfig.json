{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",                                
    "target": "ES2023",
    "rootDir": "./src",
    "outDir": "./dist",  
    "strict": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}